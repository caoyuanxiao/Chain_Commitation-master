<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/ll_mainlistitem"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:orientation="horizontal">

	<ImageView
		android:layout_centerVertical="true"
		android:id="@+id/iv_user"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:padding="10dp"
		android:src="@mipmap/user"/>

	<LinearLayout
		android:layout_toLeftOf="@+id/ll_time"
		android:id="@+id/ll_sms_content"
		android:layout_centerVertical="true"
		android:layout_toRightOf="@+id/iv_user"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"

		android:orientation="vertical">

		<TextView
			android:id="@+id/mainlist_address"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="1333333"
			android:textSize="20dp"/>

		<TextView

			android:id="@+id/mainlist_body"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ellipsize="end"
            android:maxLines="1"
			android:text="ddddddccccccccccccccccccccccccccccccccdddddddddddddgvv"/>


	</LinearLayout>

	<LinearLayout
		android:id="@+id/ll_time"
		android:layout_centerVertical="true"
		android:padding="10dp"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_gravity="center"
		android:layout_width="wrap_content"
		android:orientation="vertical">

		<TextView
			android:id="@+id/mainlist_statu"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:text="失败"/>

		<TextView
			android:textSize="15dp"
			android:id="@+id/mainlist_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:text="12:20"/>
	</LinearLayout>
</RelativeLayout>
