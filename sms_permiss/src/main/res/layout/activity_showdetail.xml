<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">


	<RelativeLayout
		android:id="@+id/rl_showdetailtitle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/colorPrimary"
		android:padding="10dp">

		<ImageView
			android:id="@+id/iv_detail_close"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@mipmap/user"
			/>

		<TextView
			android:id="@+id/tv_showdetai_address"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:text="10086"
			android:textSize="20dp"/>
	</RelativeLayout>


	<android.support.v7.widget.RecyclerView
		android:id="@+id/showdetail_recyclerview"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_below="@+id/rl_showdetailtitle">
	</android.support.v7.widget.RecyclerView>


	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/black"
		></View>

	<LinearLayout
		android:id="@+id/ll_showdetail_buttom"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:layout_alignParentBottom="true"
		android:background="#ffffff"
		android:gravity="center_vertical"
		android:padding="10dp"
		android:weightSum="7"
		>

		<ImageView
			android:id="@+id/iv_showdetail_popuwind"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:src="@mipmap/down_inputstream"/>

		<View
			android:layout_width="1dp"
			android:layout_height="match_parent"
			android:background="@color/black"></View>

		<RelativeLayout
			android:id="@+id/rl_showdetail1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="2">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:text="你好啊"
				android:textSize="20dp"/>
		</RelativeLayout>

		<View
			android:layout_width="1dp"
			android:layout_height="match_parent"
			android:background="@color/black"></View>

		<RelativeLayout

			android:id="@+id/rl_showdetail2"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="2">

			<TextView
				android:id="@+id/textView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"

				android:layout_centerHorizontal="true"
				android:text="你好啊"
				android:textSize="20dp"/>
		</RelativeLayout>

		<View
			android:layout_width="1dp"
			android:layout_height="match_parent"
			android:background="@color/black"></View>

		<RelativeLayout
			android:id="@+id/rl_showdetail3"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="2">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:text="你好啊"
				android:textSize="20dp"/>
		</RelativeLayout>
	</LinearLayout>


	<LinearLayout
		android:id="@+id/ll_showdetail_edit"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:layout_alignParentBottom="true"
		android:background="#ffffff"
		android:gravity="center_vertical"
		android:padding="5dp"
		android:visibility="gone"
		android:weightSum="7"
		>

		<ImageView
			android:id="@+id/iv_showdetail_edit"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_margin="5dp"
			android:layout_weight="1"
			android:src="@mipmap/up_inputstream"/>

		<View
			android:layout_width="1dp"
			android:layout_height="match_parent"
			android:background="@color/black"></View>

		<EditText
			android:id="@+id/editText"
			android:layout_width="0dp"
			android:layout_height="50dp"
			android:layout_margin="5dp"
			android:layout_weight="5"
			android:hint="输入短信内容"/>

		<View
			android:layout_width="1dp"
			android:layout_height="match_parent"
			android:background="@color/black"></View>

		<Button

			android:id="@+id/btn_showdetail_send"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_margin="5dp"
			android:layout_weight="1"
			android:background="@drawable/sendsms"
			android:text="发送"
			android:textColor="#fafafa"/>
	</LinearLayout>


</RelativeLayout>
